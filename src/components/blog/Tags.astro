---
import { getPermalink } from '~/utils/permalinks';

import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

export interface Props {
  tags: Post['tags'];
  class?: string;
  title?: string | undefined;
  titleClass?: string | undefined;
  isCategory?: boolean;
}

const { 
  tags, 
  class: className = 'text-sm', 
  title = undefined,
  titleClass = "align-super font-normal underline underline-offset-4 decoration-2 dark:text-slate-400",
  isCategory = false 
} = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <>
      {title !== undefined && (
        <span class={titleClass}>
          {title}
        </span>
      )}
      <ul class={className}>
        {tags.map((tag) => (
          <li class="bg-gray-100 dark:bg-slate-700 inline-block mr-2 rtl:mr-0 rtl:ml-2 mb-2 py-1.5 px-3 rounded-full font-medium transition-colors duration-200 hover:bg-gray-200 dark:hover:bg-slate-600">
            {!APP_BLOG?.tag?.isEnabled ? (
              tag.title
            ) : (
              <a
                href={getPermalink(tag.slug, isCategory ? 'category' : 'tag')}
                class="text-gray-700 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400"
              >
                {tag.title}
              </a>
            )}
          </li>
        ))}
      </ul>
    </>
  )
}
