---
import { Icon } from "astro-icon/components";

// 定义组件的 props
const { icon, title, notes } = Astro.props;
---

<section class="bg-blue-50 dark:bg-slate-800 not-prose">
  <div
    class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium"
  >
    <span class="font-bold">
      <Icon name={icon} class="w-5 h-5 inline-block align-text-bottom" />
      {title}:
    </span>
    {notes}
  </div>
</section>
